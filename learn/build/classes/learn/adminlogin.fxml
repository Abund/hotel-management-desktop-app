<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Text?> 
<?import java.net.*?>


<GridPane   id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="learn.AdminloginController"
            alignment ="CENTER" hgap="10" 
           vgap="10" fx:id="adminlogin">
    <padding>
        <Insets top="25" right="25" bottom ="25" left ="25"/>
    </padding>
    
    <Text text="Admin Please Login" fx:id="loginlabel"  
        GridPane.columnIndex="0" GridPane.rowIndex="0"
        GridPane.columnSpan="2"/>
    
    <Label text="User Name:" fx:id="userName"
        GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    
    <TextField fx:id= "username"
        GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    
    <Label text="Password:" fx:id="password"
        GridPane.columnIndex="0" GridPane.rowIndex="2"/> 
    
    <PasswordField fx:id="passwordField"
        GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    
    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="4">
          
            <Button text ="Sign In"
            onAction ="#login" fx:id="login"/>
    </HBox>
    
    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="6">
          
            <Button text ="Sign up"
            onAction ="#createAccount" fx:id="createAccount"/>
            
    </HBox>
    
   
    
    
</GridPane>
